<script>
    $(document).ready(function () {
        localStorage.removeItem("ITEMS");
        localStorage.removeItem("MstTests");
        localStorage.removeItem("SelectedItems");
        updateCartCount();

        $(".button-menu-mobile").on("click", function (t) {
            var width = $(window).width();
            if (width < 768) {
                $(".left-side-menu").toggle();
            }
        });

        $('input[type=radio][name=radSize]').change(function () {
            localStorage.removeItem("ITEMS");
            localStorage.removeItem("MstTests");
            localStorage.removeItem("SelectedItems");
            updateCartCount();
            setSelectedProductDropdown();
            $("div#ProductList").html("");
            $('#SelectedProduct').empty();
            $("#PromoCode").val('');

            localStorage.setItem("BookingType", this.value);
        });
    });
    function IsAlphaNumeric(e) {
        // alert(e.keyCode);
        var keyCode = e.keyCode == 0 ? e.charCode : e.keyCode;
        var ret = ((keyCode >= 48 && keyCode <= 57) || (keyCode >= 65 && keyCode <= 90) || (keyCode >= 97 && keyCode <= 122) || (keyCode == 32));
        // document.getElementById("error").style.display = ret ? "none" : "inline";
        return ret;
    }
    function leftTrim(element) {
        if (element)
            element.value = element.value.replace(/^\s+/, "");
    }
 
 
   
  
</script>